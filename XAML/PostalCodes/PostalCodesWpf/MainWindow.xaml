<Window x:Class="PostalCodesWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostalCodesWpf"
        mc:Ignorable="d"
        Title="Postal Codes" Height="320" Width="480" FontSize="32">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Postal Code:" Margin="10"/>
        <TextBox Text="{Binding InputPostalCode.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="8" Margin="10" Grid.Column="1"/>
        <TextBox Text="{Binding AppModel.Response.Value.data.fullAddress}" IsReadOnly="True" TextWrapping="Wrap" Margin="10" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
